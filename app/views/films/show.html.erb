<% content_for :title do %>
  <% @film.name %> 
<% end %>


<div class="columns mt-6 is-centered">
  <div class-"column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        Nome:
          <%= @film.name %>
      </p>

      <div class="panel-block">
        Ano de lançamento: <%= @film.launch_year %>
      </div>
      
      <div class="panel-block">
        Sinopse:
          <%= @film.sinopse %>
      </div>

      <div class="panel-block">
        Diretor:
          <%= @film.director %>
      </div>

      <div class="panel-block">
        Avaliação:
          <%= @film.rating %>
      </div>

    </nav>


    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Editar', edit_film_path(@film), class: "button is-gray" %> 
        <%= link_to 'Deletar', film_path(@film), method: :delete, data: 
        { confirm: "Tem certeza?"}, class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>
